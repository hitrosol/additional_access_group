<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account.menu_finance" model="ir.ui.menu">
        <field name="name">Invoicing</field>
        <field eval="[(4,ref('additional_access_right.group_account_assistant'))]" name="groups_id"/>
    </record>

    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">view.move.form_inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_draft']" position="attributes">
                <attribute name="groups" eval="[(4,ref('additional_access_right.group_account_assistant'))]"/>
            </xpath>

            <xpath expr="//button[@name='button_cancel']" position="attributes">
                <attribute name="groups" eval="[(4,ref('additional_access_right.group_account_assistant'))]"/>
            </xpath>
  
            <xpath expr="//button[@name='action_reverse']" position="attributes">
                <attribute name="groups" eval="[(4,ref('additional_access_right.group_account_assistant'))]"/>
            </xpath>

            <xpath expr="//button[@name='action_post'][2]" position="attributes">
                <attribute name="groups" eval="[(4,ref('additional_access_right.group_account_assistant'))]"/>
            </xpath>

            <xpath expr="//button[@name='action_register_payment']" position="attributes">
                <attribute name="groups" eval="[(4,ref('additional_access_right.group_account_assistant'))]"/>
            </xpath>




        </field>
    </record>

</odoo>
